<script>
  import Splide from "@splidejs/splide";

  const options1 = {
    perMove: 1,
    gap: 16,
    cover: true,
    heightRatio: 0.5,
    updateOnMove: true,
    pagination: false,
    arrows: false,
    autoplay: true,
    interval: 3000,
