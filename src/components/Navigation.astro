import logo from "../images/logo.svg";
---

<nav class="c-nav js-nav">
  <ul class="c-nav__list">
    <li class="c-nav__item"><a href="#about"><span>ABOUT</span><br />私について</a></li>
    <li class="c-nav__item"><a href="#open"><span>SERVICE</span><br />対応可能業務</a></li>
    <li class="c-nav__item"><a href="#access"><span>WORKS</span><br />ご支援実績</a></li>
    <li class="c-nav__item"><a href="#contact"><span>CONTACT</span><br />お問い合わせ</a></li>
  </ul>

  <div class="js-focus-trap" tabindex="0"></div>
  <ul class="c-nav__information">
    <li class="p-nav__item--address">〒950-2053<br />新潟市西区寺尾前通1丁目10番地3-2号</li>
    <li class="p-nav__item p-nav__item--tel">T.025-201-8160（定休：土・日・祝）</li>
    <li class="p-nav__item p-nav__item--open">営業時間：9:00〜17:30</li>
  </ul>
</nav>
<style>
  .c-nav {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 9;
    width: 100vw;
    visibility: hidden;
    background: rgba(255, 255, 255, 0.7);
    opacity: 0;
    transition: 0.5s;
    backdrop-filter: saturate(180%) blur(10px);
    -webkit-backdrop-filter: saturate(180%) blur(10px);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100dvh;
    gap: var(--gap-nav);
  }

  .c-nav__information {
    font-size: var(--font-nav-information);
    line-height: 1.5;
  }

  .c-nav.is-active {
    visibility: visible;
    opacity: 1;
    transition: 1s;
    overflow-y: auto;
  }

  .c-nav__item a {
    transition: color 0.4s;
    font-size: var(--font-nav);
    line-height: 1.5;
    display: block;
    padding: 1.5rem;
  }
  .c-nav__item a span {
    font-size: var(--font-nav-en);
  }

  .c-nav__item--logo {
    width: 300px;
    padding-bottom: 10px;
    margin-top: 50px;
  }

  .c-nav__item--address {
    font-size: 15px;
    color: #777;
    padding-bottom: 0;
    line-height: 1.5;
  }

  .c-nav__item--tel {
    font-size: 16px;
    color: #777;
    padding-bottom: 0;
    line-height: 1.5;
  }

  .c-nav__item--open {
    font-size: 15px;
    color: #777;
    padding-bottom: 0;
    line-height: 1.5;
  }

  .c-nav__item--logo::before {
    content: none;
  }

  .c-nav__item--address::before {
    content: none;
  }

  .c-nav__item--tel::before {
    content: none;
  }

  .c-nav__item--open::before {
    content: none;
  }
</style>
