<button class="c-menu js-menu" type="button" aria-controls="navigation" aria-expanded="false">
  <span class="c-menu__line"></span>
  <span class="c-menu__text"></span>
</button>

<style>
  .c-menu {
    display: block;
    height: 60px;
    margin-left: auto;
    position: fixed;
    top: 40px;
    right: 8px;
    z-index: 10;
    width: 60px;
    border: none;
    background-color: transparent;
    cursor: pointer;
  }

  @media screen and (min-width: 768px) {
    .c-menu {
      top: 40px;
      right: 24px;
    }
  }

  .c-menu.is-active .c-menu__line {
    background-color: transparent;
  }

  .c-menu.is-active .c-menu__line::before {
    top: 0;
    transform: rotate(45deg);
  }

  .c-menu.is-active .c-menu__line::after {
    top: 0;
    transform: rotate(-45deg);
  }

  .c-menu.is-active .c-menu__text::before {
    content: "CLOSE";
  }

  .c-menu__line {
    display: block;
    height: 1px;
    position: absolute;
    top: 23px;
    width: 30px;
    /*background-color: #172e59;真ん中のLINE*/
    transition: 0.4s;
  }

  .c-menu__line:before {
    content: "";
    display: block;
    height: 100%;
    position: absolute;
    width: 100%;
    background-color: #172e59;
    transition: inherit;
  }

  .c-menu__line:after {
    content: "";
    display: block;
    height: 100%;
    position: absolute;
    width: 100%;
    background-color: #172e59;
    transition: inherit;
  }

  .c-menu__line:before {
    top: -4px;
  }

  .c-menu__line:after {
    top: 4px;
  }

  .c-menu__text {
    position: absolute;
    bottom: 8px;
    width: 100%;
  }

  .c-menu__text::before {
    content: "MENU";
    text-align: center;
    color: #666;
    font-size: 10px;
  }
</style>
